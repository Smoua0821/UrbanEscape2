<div class="howtoplaycontainer"></div>
<div class="user-navbar" style="display: none">
  <div class="navbar-container">
    <ul>
      <% if (user) { %>
      <li data-id="/user/profile" style="float: left">
        <span class="fa fa-bars"></span>
      </li>
      <% if (user.role.current=="admin") { %>
      <li data-id="/admin">Admin</li>
      <%}%> <% if (locals.missions) { %>
      <li data-id="/missions">Missions</li>
      <% } %> <% }else{ %>
      <li data-id="/auth">Login</li>
      <% } %>
    </ul>
  </div>
</div>
<style>
  .user-navbar {
    position: fixed;
    bottom: 0;
    justify-content: center;
    width: 100%;
  }

  .user-navbar .navbar-container {
    background: #fff;
    border-radius: 5px;
    padding: 5px;
    font-family: sans-serif;
    text-align: center;
  }

  .user-navbar .navbar-container ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .user-navbar .navbar-container ul li {
    display: inline-block;
    border: 1px solid #ffabab;
    padding: 5px 10px;
    border-radius: 5px;
    cursor: pointer;
    transition: 0.1s;
    color: #3e3e3e;
  }

  .user-navbar .navbar-container ul li:hover {
    background: #ff0000;
    color: white;
  }
</style>
