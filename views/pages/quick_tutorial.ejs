<html>
  <head>
    <title><%=title%> - Urban Escape</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="google-site-verification"
      content="AWs8hJem8IT6O4cQ7612JJiVbaFPXWy-x-FUNH9PxVE"
    />
    <meta
      name="description"
      content="URBANESCAPE Quick Tutorial - Learn how to play UrbanEscape, explore maps, complete missions, and become a city explorer!"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
  </head>
  <body>
    <!-- Carousel Section -->
    <section class="py-5 bg-dark">
      <div class="container">
        <h2>Quick Tutorial</h2>
        <div
          id="carouselExample"
          class="carousel slide shadow-lg rounded overflow-hidden"
          data-bs-ride="carousel"
        >
          <div class="carousel-inner">
            <%tutorialImages.forEach(d=>{%>
            <div class="carousel-item active">
              <img src="<%=d.url%>" class="d-block w-100" alt="<%=d.name%>" />
            </div>
            <%})%>
          </div>
          <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#carouselExample"
            data-bs-slide="prev"
          >
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#carouselExample"
            data-bs-slide="next"
          >
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="bg-primary text-white text-center py-5">
      <div class="container">
        <h2 class="mb-3">Ready?</h2>
        <a href="/register" class="my-2 btn btn-warning btn-lg me-3"
          >Create Account Now</a
        >
        <button onclick="goToMap()" class="my-2 btn btn-warning btn-lg">
          Go back to Map
        </button>
      </div>
    </section>
    <script>
      function goToMap() {
        let loc = localStorage.lastMap;
        window.location.href = loc ? `/map/${loc}` : "/auth";
      }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
