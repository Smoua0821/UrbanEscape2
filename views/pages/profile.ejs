<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="google-signin-client_id"
      content="YOUR_CLIENT_ID.apps.googleusercontent.com"
    />

    <title>Profile</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <style>
      ::-webkit-scrollbar {
        display: none;
      }
      body {
        background: url(/images/green_bg.jpeg);
        background-size: cover;
        background-position: center;
      }

      .form-control_v {
        background-color: #ffffff66;
        width: 100%;
        border: 0;
        outline: 0;
        padding: 5px 20px;
        border: 1px solid lightgrey;
      }

      .form-container form {
        background: #ffffff52 !important;
        backdrop-filter: blur(5px);
        border: 1px solid #d3d3d363;
        animation: 3s circularShadow infinite;
      }

      form.profile table {
        width: 100%;
      }

      .logoutContainer {
        position: fixed;
        bottom: 10px;
        text-align: center;
      }

      .bottomfixedbuttons {
        position: fixed;
        z-index: 99;
        bottom: 10px;
        width: 100%;
        text-align: center;
      }

      .bottomfixedbuttons a {
        padding: 8px 10px;
        display: inline-block;
        background: red;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        border: 2px solid;
        transition: 0.2s;
      }

      .bottomfixedbuttons a.vj-learnMore {
        background: yellow;
        color: black;
      }

      .bottomfixedbuttons a:hover {
        background: #f80;
        border: 2px dashed;
      }

      .captured-images {
        max-height: 50vh;
        overflow-y: scroll;
      }

      @keyframes circularShadow {
        0%,
        100% {
          box-shadow: 2px 2px 20px 5px green;
        }
        25% {
          box-shadow: 2px -2px 20px 5px green;
        }
        50% {
          box-shadow: -2px -2px 20px 5px green;
        }
        75% {
          box-shadow: -2px 2px 20px 5px green;
        }
      }
    </style>
  </head>
  <body>
    <div class="body-container">
      <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="form-container col-lg-4 col-md-6 col-12 col-sm-8">
          <form class="py-2 container profile rounded-2">
            <h1
              class="m-0 text-center"
              style="
                color: transparent;
                -webkit-text-stroke: 1px #19873d;
                text-transform: uppercase;
                text-shadow: 2px 2px 10px #19873d;
              "
            >
              Profile
            </h1>
            <hr />
            <table>
              <tr>
                <th>Name</th>
                <td><%= user.name %></td>
              </tr>
              <tr>
                <th>Email</th>
                <td><%= user.email %></td>
              </tr>
            </table>
            <div class="link-container mt-3 text-center">
              <% if (locals.primaryMap && primaryMap.map && primaryMap.map.id) {
              %>
              <a
                href="/map/<%= primaryMap.map.id %>"
                class="btn btn-success ms-2"
                >Back to Map</a
              >
              <% } %> <% if (user.role.current=="admin") { %>
              <a href="/admin" class="btn btn-success ms-2">Admin</a>
              <% } %>
              <button
                class="ms-2 btn btn-info badge-info"
                data-bs-toggle="modal"
                data-bs-target="#bsModal"
              >
                Badges
              </button>
            </div>
            <hr />
            <div class="captured-images">
              <h3 class="text-center pb-2 border-bottom">Captured Images</h3>
              <% if (locals.user && user.capturedImages.length>0) { %>
              <div class="image-container row justify-content-center">
                <% user.capturedImages.forEach(image => { %> <%
                image.images.forEach(img=>{%>
                <div class="image-unit col-3">
                  <img src="/static/image/<%= img %>" width="100%" />
                </div>
                <%}) %> <% }) %>
              </div>
              <% }else{ %>
              <div class="text-center alert alert-success opacity-50">
                No Image Captured!
              </div>
              <%}%>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="bottomfixedbuttons">
      <a href="/logout" class="vj-logout">Logout</a>
    </div>
    <div
      class="modal fade"
      id="bsModal"
      tabindex="-1"
      aria-labelledby="bsModal"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5 text-center" id="bsModalTitle">
              Badge Collection
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <% if (userBadgeDetails && userBadgeDetails.length > 0) { %>
            <table class="table">
              <tbody>
                <% userBadgeDetails.forEach(badge => { %>
                <tr>
                  <td>
                    <img src="<%= badge.badge %>" width="100px" />
                  </td>
                  <td><%= badge.description %></td>
                </tr>
                <% }); %>
              </tbody>
            </table>
            <% } else { %>
            <div class="alert alert-danger">
              No Badges found in your Profile!
            </div>
            <% } %>

            <div class="mt-2 text-center">
              <button
                type="button"
                class="btn btn-danger"
                data-bs-dismiss="modal"
                aria-label="Close"
              >
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
      $(document).ready(() => {
        $("form.profile").submit(() => {
          return false;
        });
        $.post("/api/buttons", { name: "learn_more_btn" }, (data) => {
          $(".user-navbar").fadeIn();
          if (data) {
            const cstdta = data;
            $(".bottomfixedbuttons").append(
              `<a class='vj-learnMore' href='${cstdta.link}' target='_blank'>${cstdta.text}</a>`
            );
          }
        });
      });
    </script>
  </body>
</html>
