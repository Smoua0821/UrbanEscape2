<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="google-signin-client_id"
      content="YOUR_CLIENT_ID.apps.googleusercontent.com"
    />

    <title>Profile</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <style>
      body {
        background: url(/images/green_bg.jpeg);
        background-size: cover;
        background-position: center;
      }

      .form-control_v {
        background-color: #ffffff66;
        width: 100%;
        border: 0;
        outline: 0;
        padding: 5px 20px;
        border: 1px solid lightgrey;
      }

      .form-container form {
        background: #ffffff52 !important;
        backdrop-filter: blur(5px);
        border: 1px solid #d3d3d363;
        animation: 3s circularShadow infinite;
      }

      form.profile table {
        width: 100%;
      }

      @keyframes circularShadow {
        0%,
        100% {
          box-shadow: 2px 2px 20px 5px green;
        }
        25% {
          box-shadow: 2px -2px 20px 5px green;
        }
        50% {
          box-shadow: -2px -2px 20px 5px green;
        }
        75% {
          box-shadow: -2px 2px 20px 5px green;
        }
      }
    </style>
  </head>
  <body>
    <div class="body-container">
      <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="form-container col-lg-4 col-md-6 col-12 col-sm-8">
          <form class="py-2 container profile rounded-2">
            <h1
              class="m-0 text-center"
              style="
                color: transparent;
                -webkit-text-stroke: 1px #19873d;
                text-transform: uppercase;
                text-shadow: 2px 2px 10px #19873d;
              "
            >
              Profile
            </h1>
            <hr />
            <table>
              <tr>
                <th>Name</th>
                <td><%= user.name %></td>
              </tr>
              <tr>
                <th>Email</th>
                <td><%= user.email %></td>
              </tr>
            </table>
            <div class="link-container mt-3 text-center">
              <a href="/logout" class="btn btn-danger">Logout</a>
              <a href="/" class="btn btn-success ms-2">Map</a>
              <% if (user.role.current=="admin") { %>
              <a href="/admin" class="btn btn-success ms-2">Admin</a>
              <% } %>
            </div>
            <hr />
            <div class="captured-images">
              <h3 class="text-center pb-2 border-bottom">Captured Images</h3>
              <% if (locals.user && user.capturedImages.length>0) { %>
              <div class="image-container row justify-content-center">
                <% user.capturedImages.forEach(image => { %>
                <div class="image-unit col-6 col-sm-4 col-lg-3">
                  <img src="/images/mapicons/<%= image %>" width="100%" />
                </div>
                <% }) %>
              </div>
              <% }else{ %>
              <div class="text-center alert alert-success opacity-50">
                No Image Captured!
              </div>
              <%}%>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
